<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_3"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/idTVSecondary"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/layout_3"
        android:gravity="bottom"
        android:maxLines="1"
        android:padding="10dp"
        android:paddingTop="30dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textSize="50sp"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/idTVprimary"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/idTVSecondary"
        android:background="@color/layout_3"
        android:gravity="bottom"
        android:maxLines="1"
        android:padding="10dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="#fff"
        android:textSize="30sp"
        tools:ignore="RtlCompat" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/idTVprimary"
        android:background="@color/layout_1"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="@color/layout_1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="5">

                <Button
                    android:id="@+id/bsin"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/layout_2"
                    android:padding="6dp"
                    android:text="sin"
                    android:textAllCaps="false"
                    android:textColor="#ffa500"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/bcos"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/layout_2"
                    android:padding="6dp"
                    android:text="cos"
                    android:textAllCaps="false"
                    android:textColor="#ffa500"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btan"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/layout_2"
                    android:padding="6dp"
                    android:text="tan"
                    android:textAllCaps="false"
                    android:textColor="#ffa500"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/blog"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/layout_2"
                    android:padding="6dp"
                    android:text="log"
                    android:textAllCaps="false"
                    android:textColor="#ffa500"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/bln"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/layout_2"
                    android:padding="6dp"
                    android:text="ln"
                    android:textAllCaps="false"
                    android:textColor="#ffa500"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bfact"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/layout_2"
                    android:padding="6dp"
                    android:text="x!"
                    android:textAllCaps="false"
                    android:textColor="#ffa500"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/bsquare"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/layout_2"
                    android:padding="6dp"
                    android:text="x²"
                    android:textAllCaps="false"
                    android:textColor="#ffa500"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/bsqrt"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/layout_2"
                    android:padding="6dp"
                    android:text="√"
                    android:textColor="#ffa500"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/binv"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/layout_2"
                    android:padding="6dp"
                    android:text="1/x"
                    android:textAllCaps="false"
                    android:textColor="#ffa500"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/bdiv"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/layout_2"
                    android:padding="6dp"
                    android:text="÷"
                    android:textColor="#ffa500"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/b7"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/layout_2"
                    android:padding="6dp"
                    android:text="7"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/b8"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/layout_2"
                    android:padding="6dp"
                    android:text="8"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/b9"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/layout_2"
                    android:padding="6dp"
                    android:text="9"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/bmul"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/layout_2"
                    android:padding="6dp"
                    android:text="×"
                    android:textColor="#ffa500"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/b4"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/layout_2"
                    android:padding="6dp"
                    android:text="4"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/b5"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/layout_2"
                    android:padding="6dp"
                    android:text="5"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/b6"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/layout_2"
                    android:padding="6dp"
                    android:text="6"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/bminus"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/layout_2"
                    android:padding="6dp"
                    android:text="-"
                    android:textColor="#ffa500"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/b1"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/layout_2"
                    android:padding="6dp"
                    android:text="1"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/b2"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/layout_2"
                    android:padding="6dp"
                    android:text="2"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/b3"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/layout_2"
                    android:padding="6dp"
                    android:text="3"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/bplus"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/layout_2"
                    android:padding="6dp"
                    android:text="+"
                    android:textColor="#ffa500"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bpi"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/layout_2"
                    android:padding="6dp"
                    android:text="π"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/b0"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/layout_2"
                    android:padding="6dp"
                    android:text="0"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/bdot"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/layout_2"
                    android:padding="6dp"
                    android:text="."
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/bequal"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/layout_2"
                    android:padding="6dp"
                    android:text="="
                    android:textColor="#ffa500"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/bac"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/layout_2"
                    android:padding="6dp"
                    android:text="AC"
                    android:textColor="@color/layout_4"
                    android:textSize="15sp"
                    android:visibility="visible"
                    tools:visibility="visible" />

                <Button
                    android:id="@+id/bc"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/layout_2"
                    android:padding="6dp"
                    android:text="C"
                    android:textColor="@color/layout_4"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/bbrac1"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/layout_2"
                    android:padding="6dp"
                    android:text="("
                    android:textColor="#ffa500"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/bbrac2"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/layout_2"
                    android:padding="6dp"
                    android:text=")"
                    android:textColor="#ffa500"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
